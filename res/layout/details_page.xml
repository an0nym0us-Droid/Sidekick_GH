<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="#353535"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="5dp"
    android:paddingTop="@dimen/activity_vertical_margin" >
    
    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        	<FrameLayout android:layout_width="140dp"
	    	    android:layout_height="140dp"
	    	    android:layout_gravity="center_vertical">
		    		<ImageView
		     		   android:id="@+id/detailShowLogo"
		     		   android:layout_width="match_parent"
		     		   android:layout_height="match_parent"
		     		   android:background="#535353"/>

		    		<ProgressBar
		    		    android:id="@+id/detailShowLogoLoader"
		    		    android:layout_width="wrap_content"
		    		    android:layout_gravity="center"
		    		    android:visibility="gone"
		    		    android:layout_height="wrap_content" />
    		</FrameLayout>
    		
        	<View android:layout_width="10dp"
        	    android:layout_height="140dp"/>
        	
        	<RelativeLayout
        	    android:layout_width="match_parent"
        	    android:layout_height="140dp" >

        	    <LinearLayout
        	        android:id="@+id/linearLayout1"
        	        android:layout_width="match_parent"
        	        android:layout_height="wrap_content"
        	        android:layout_alignParentTop="true"
        	        android:orientation="vertical" >

        	        <TextView
        	            android:id="@+id/detailTiming"
        	            android:layout_width="wrap_content"
        	            android:layout_height="wrap_content"
        	            android:paddingTop="5dp"
        	            android:text="Timings"
        	            android:textColor="@android:color/white" />

        	        <TextView
        	            android:id="@+id/detailDOW"
        	            android:layout_width="wrap_content"
        	            android:layout_height="wrap_content"
        	            android:text="Day of Week"
        	            android:textColor="@android:color/white" />

        	        <View
        	            android:layout_width="match_parent"
        	            android:layout_height="4dp" />

        	        <TextView
        	            android:id="@+id/repeatHeading"
        	            android:layout_width="wrap_content"
        	            android:layout_height="wrap_content"
        	            android:text="REPEAT TELECAST"
        	            android:textSize="11sp"
        	            android:textColor="@android:color/secondary_text_dark_nodisable" />

        	        <TextView
        	            android:id="@+id/repeatTiming"
        	            android:layout_width="wrap_content"
        	            android:layout_height="wrap_content"
        	            android:paddingTop="3dp"
        	            android:text="Repeat Timings"
        	                    	            android:textSize="10sp"
        	            
        	            android:textColor="@android:color/secondary_text_dark_nodisable" />

        	        <TextView
        	            android:id="@+id/repeatDOW"
        	            android:layout_width="wrap_content"
        	            android:layout_height="wrap_content"
        	            android:text="Repeat DOW"
        	            android:textSize="10sp"
        	            android:textColor="@android:color/secondary_text_dark_nodisable" />
        	    </LinearLayout>

        	    <LinearLayout
        	        android:layout_width="match_parent"
        	        android:layout_height="wrap_content"
        	        android:layout_alignParentBottom="true"
        	        android:orientation="horizontal" >

        	        <Button
        	            android:id="@+id/shareTunein"
        	            android:layout_width="wrap_content"
        	            android:layout_height="30dp"
        	            android:background="@drawable/ninebuttons"
        	            android:text="Tune in"
        	            android:textSize="10sp"
        	            android:textColor="#FFFFFF"
        	            android:paddingLeft="3dp"
        	            android:drawablePadding="3dp"
        	            android:drawableLeft="@drawable/detailtunein"
        	            android:gravity="start|center_vertical"
        	            android:onClick="shareTuneIn" />

        	        <View
        	            android:layout_width="4dp"
        	            android:layout_height="1dp" />
        	        
        	        <Button
        	            android:id="@+id/setReminder"
        	            android:layout_width="wrap_content"
        	            android:layout_height="30dp"
        	            android:background="@drawable/ninebuttons"
        	            android:text="Set Reminder"
        	            android:textColor="#FFFFFF"
        	            android:textSize="9sp"
        	            android:paddingRight="3dp"
        	            android:paddingLeft="3dp"
        	            android:gravity="start|center_vertical"
        	            android:drawablePadding="3dp"
        	            android:drawableLeft="@drawable/detailreminder"
        	            android:onClick="setReminder" />
        	        
        	    </LinearLayout>
        	    
        	</RelativeLayout>
        
    </LinearLayout>
    <LinearLayout android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <CheckBox android:layout_width="wrap_content"
        	    android:layout_height="wrap_content"
        	    android:id="@+id/shareOnFb"
        	    android:layout_marginLeft="145dp"/>
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="Share on Facebook"/>
    </LinearLayout>
    <TextView
			android:id="@+id/detailShowName"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Showname"
			android:textColor="@android:color/white"
			android:maxLines="1"
			android:ellipsize="end"
			android:textAppearance="@android:style/TextAppearance.Medium"/>
    
    <View android:layout_width="match_parent"
        	    android:layout_height="15dp"/>
    
    <TextView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Synopsis"
        android:textColor="#ED9A00"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceMedium"/>
    <View android:layout_width="fill_parent"
 	    android:layout_height="1dp"
 	    android:background="#A0F7D393"/>
    <TextView android:layout_width="wrap_content"
        android:id="@+id/detailEpisodeSynopsis"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:text="Episode synopsis"
        android:textColor="@android:color/secondary_text_dark_nodisable"/>
    
    <View android:layout_width="match_parent"
        	    android:layout_height="25dp"/>
    
    <TextView android:layout_width="wrap_content"
        android:id="@+id/detailShowSynopsis"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:text="Show synopsis"
        android:textColor="@android:color/secondary_text_dark_nodisable"/>
    
    <View android:layout_width="match_parent"
        	    android:layout_height="25dp"/>
    
    <Button android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Watch previous episodes"
        android:padding="5dp"
        android:id="@+id/prevEpisodes"
        android:onClick="watchPrev"
        android:textColor="#ffffff"
        android:background="@drawable/ninebuttons" />
    
    
</LinearLayout>