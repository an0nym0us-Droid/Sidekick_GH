<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
    <FrameLayout android:layout_width="match_parent"
        android:layout_height="wrap_content">
    
    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/setupGridOuterboundary"
    android:background="#aaed9a00"
    android:padding="3dp"
    android:layout_gravity="center"
    android:orientation="vertical" >
	<FrameLayout android:layout_width="match_parent"
	    android:background="#FFFFFF"
	    android:layout_height="wrap_content">
	    
	    <ImageView android:layout_width="50dp"
	        android:layout_height="50dp"
	        android:paddingBottom="10dp"
	        android:scaleType="fitCenter"
	        android:id="@+id/gridSetupImage"
	        android:layout_gravity="center_horizontal"
	        android:src="@drawable/c4"/>
	   
	    <TextView android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:textColor="#000000"
	        android:background="#57000000"
	        android:textSize="11sp"
	        android:gravity="center"
	        android:id="@+id/gridSetupName"
	        android:paddingLeft="3dp"
	        android:maxLines="1"
	        android:ellipsize="end"
	        android:paddingRight="3dp"
	        android:layout_gravity="center_horizontal|bottom"
	        android:text="Hungama"/>
	</FrameLayout>
	</LinearLayout>
	 <ImageView android:layout_width="28dp"
	        android:layout_height="28dp"
	        android:layout_gravity="right"
	        android:id="@+id/setup_grid_check"
	        android:src="@drawable/grid_setup_check"/>
	</FrameLayout>
</LinearLayout>
