<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/setup_background"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="20dp" >

    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:paddingLeft="10dp"
        android:text="WELCOME"
        android:textColor="@drawable/solid_orange_color"
        android:textSize="40sp" />
    
    <View android:layout_width="fill_parent"
 	    android:layout_height="2dp"
 	    android:background="#A0F7D393"
 	    android:layout_below="@id/welcome" />

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:paddingLeft="10dp"
        android:text="Change your TV experience in just a few steps..."
        android:paddingTop="10dp"
        android:layout_below="@id/welcome"
        android:textColor="@drawable/solid_orange_color"
        android:textSize="20sp" />
    
    <TextView
        android:id="@+id/provider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/welcome"
        android:layout_marginTop="86dp"
        android:text="Choose your DTH"
                android:textColor="@drawable/solid_orange_color"
        
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Spinner
        android:id="@+id/providerSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcome"
        android:layout_marginTop="76dp"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/provider"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/basepackage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/providerSpinner"
        android:layout_marginTop="15dp"
        android:text="Choose a Base Pack"
        android:textColor="@drawable/solid_orange_color"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Spinner
        android:id="@+id/basePackageSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/providerSpinner"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@id/providerSpinner"/>
    <TextView
	    android:id="@+id/addons"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
        android:textColor="@drawable/solid_orange_color"
	    android:layout_below="@+id/basePackageSpinner"
	    android:layout_marginBottom="4dp"
	    android:textAppearance="?android:attr/textAppearanceMedium"
	    android:text="Choose Addons:" />
    
    <View android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/placeholder" />
    
    <Button
        android:id="@+id/done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/placeholder"
        android:layout_centerHorizontal="true"
        android:text="Next"
        android:textColor="#FFFFFF"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        android:background="@drawable/ninebuttons"
        android:onClick="makeChannels" />
    
<!--     <ListView -->
<!--         android:id="@+id/addonList" -->
<!--         android:layout_width="match_parent" -->
<!--         android:layout_height="200dp" -->
<!--         android:layout_alignTop="@id/addons" -->
<!--         android:layout_toRightOf="@+id/addons" > -->
<!--     </ListView> -->

	<ListView
	    android:id="@+id/addonList"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_above="@+id/done"
	    android:paddingBottom="5dp"
	    android:layout_alignParentLeft="true"
	    android:layout_below="@+id/addons" >

	</ListView>
	
</RelativeLayout>