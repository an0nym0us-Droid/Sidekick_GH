<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  xmlns:tools="http://schemas.android.com/tools"
			  xmlns:dslv="http://schemas.android.com/apk/res/com.example.sidekick_offline_try2"
			  android:layout_width="match_parent"
		      android:layout_height="match_parent"
			  android:orientation="vertical"
			  android:background="#353535" 
			  android:weightSum="1.0">
			  
    
	<com.mobeta.android.dslv.DragSortListView	
	    android:id="@+id/dslvid"
	    android:layout_width="fill_parent"
	    android:layout_height="1dp"
	    android:divider="#CCCCCC"
	    android:dividerHeight="2dp"
	    android:paddingTop="5dp"
	    android:paddingLeft="5dp"
	    dslv:collapsed_height="1dp"
	    dslv:drag_enabled="true"
	    android:clickable="false"
	    dslv:drag_scroll_start="0.33"
	    
	    android:listSelector="@drawable/rowselector"
	    dslv:drag_start_mode="onMove"
	    dslv:float_alpha="0.3" 
	    android:layout_weight="0.9"/>
	
	<View android:layout_width="match_parent"
	    android:layout_height="1dp"
	    android:background="#A0F7D393"/>
	
	<LinearLayout android:layout_width="match_parent"
	    		  android:layout_height="1dp"
	    		  android:layout_weight="0.1"
	    		  android:weightSum="1.0"
	    		  android:orientation="horizontal">
	    		  
	    <Button android:layout_height="match_parent"
	        	android:layout_width="0dp"
	        	android:layout_weight="0.5"
	        	android:text="ADD CATEGORY"
	        	android:textColor="#ED9A00"
        		android:textStyle="bold"
        		android:onClick="addCategory"
	        	android:background="@drawable/back"/>
	    
 		<View	android:id="@+id/header_vertical_divider_1"
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#A0F7D393"
               android:layout_gravity="center_vertical" />
 		
	    <Button android:layout_height="match_parent"
	        	android:layout_width="0dp"
	        	android:layout_weight="0.5"
	        	android:text="DONE"
	        	android:textColor="#ED9A00"
        		android:textStyle="bold"
        		android:onClick="done"
	        	android:background="@drawable/back"/>
	</LinearLayout>
	
</LinearLayout>
    